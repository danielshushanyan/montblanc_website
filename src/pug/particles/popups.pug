		.content__bottle-descr.content__bottle-descr--right(data-slide-text='1')
			svg.content__bottle-icon.content__bottle-icon--right(width='60', height='60', viewBox='0 0 60 60', fill='none', xmlns='http://www.w3.org/2000/svg')
				circle.circle(cx='30', cy='30', r='29', stroke='url(#paint0_linear)', stroke-width='2')
				path(d='M29.9429 37H32.0571V31.0413H38V28.9587H32.0571V23H29.9429V28.9587H24V31.0413H29.9429V37Z', fill='white')
			.content__bottle-line.content__bottle-line--right
			h2.content__bottle-title Bottle
			p.content__bottle-text.content__bottle-text--strong Transparent debossed window – Mont Blanc mountain, filigreed, as if made of ice – will take us to the cold icy peaks.
		.content__bottle-descr.content__bottle-descr--right.content__bottle-descr--right-two(data-slide-text='3')
			svg.content__bottle-icon.content__bottle-icon--right(width='60', height='60', viewBox='0 0 60 60', fill='none', xmlns='http://www.w3.org/2000/svg')
				circle.circle(cx='30', cy='30', r='29', stroke='url(#paint0_linear)', stroke-width='2')
