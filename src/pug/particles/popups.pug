.popup#products
	include popup-action
	.product
		.product__bg
		.product__wrapper
			.product__slide.product__slide--one.js-clean
				h3.product__button.product__button--reverse.js-product.js-link.js-clean Standart edition
				.product__item.js-clean
					img.product__img.product__img--1(src='./images/products/500.png')
					.product__descr
						p MONT BLANC
						p vodka 0.5l
				.product__item.js-clean
					img.product__img.product__img--1(src='./images/products/700.png')
					.product__descr
						p MONT BLANC
						p vodka 0.7l
				.product__item.js-clean
					img.product__img.product__img--1(src='./images/products/1000.png')
					.product__descr
						p MONT BLANC
						p vodka 1.0l
			.product__slide.product__slide--disable.product__slide--pro.js-clean
